<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ClientsFragment"
    android:background="@color/white">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                android:text="Clientes"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="60dp" />
            <TextView
                android:id="@+id/subtitle"
                app:layout_constraintTop_toBottomOf="@id/title"
                app:layout_constraintStart_toStartOf="@id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gerenciar seus clientes"
                android:textColor="@color/dark_gray"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_search_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/subtitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/add_client"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:hintAnimationEnabled="false"
                app:boxStrokeColor="@color/input_stroke_color"
                app:boxBackgroundMode="outline"
                app:hintEnabled="false"
                app:startIconDrawable="@drawable/ic_search_draw"
                app:startIconTint="@color/dark_gray"
                app:layout_constraintHorizontal_chainStyle="spread_inside">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHighlight="@color/primary"
                    android:hint="Buscar clientes..."/>
            </com.google.android.material.textfield.TextInputLayout>

            <ImageButton
                android:id="@+id/add_client"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                android:scaleType="fitCenter"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toTopOf="@id/input_search_layout"
                app:layout_constraintBottom_toBottomOf="@id/input_search_layout"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/ic_addclient"
                android:background="@drawable/bg_button"
                android:padding="17dp"
                android:layout_marginVertical="2dp"
                app:tint="@color/white"/>

            <ScrollView
                app:layout_constraintTop_toBottomOf="@id/input_search_layout"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20sp">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:strokeColor="@color/border"
                    app:strokeWidth="1dp"
                    android:backgroundTint="@color/white"
                    android:elevation="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp">
                            <TextView
                                android:id="@+id/name_client"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:text="Jane Smith"
                                android:textStyle="bold"
                                android:textSize="16sp"/>
                            <TextView
                                android:id="@+id/phone_client"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                app:layout_constraintTop_toBottomOf="@id/name_client"
                                app:layout_constraintStart_toStartOf="@id/name_client"
                                android:text="(61) 999253905"/>
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_short_arrow"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:rotation="-90"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/border"/>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp">
                            <TextView
                                android:id="@+id/name_client"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:text="Jane Smith"
                                android:textStyle="bold"
                                android:textSize="16sp"/>
                            <TextView
                                android:id="@+id/phone_client"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                app:layout_constraintTop_toBottomOf="@id/name_client"
                                app:layout_constraintStart_toStartOf="@id/name_client"
                                android:text="(61) 999253905"/>
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_short_arrow"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:rotation="-90"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/border"/>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp">
                            <TextView
                                android:id="@+id/name_client"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:text="Jane Smith"
                                android:textStyle="bold"
                                android:textSize="16sp"/>
                            <TextView
                                android:id="@+id/phone_client"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                app:layout_constraintTop_toBottomOf="@id/name_client"
                                app:layout_constraintStart_toStartOf="@id/name_client"
                                android:text="(61) 999253905"/>
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_short_arrow"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:rotation="-90"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>